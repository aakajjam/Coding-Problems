          </div>
        </section>

        <!-- Consultation Button -->
        <div class="button-container">
          <button class="consultation-button" @click="showForm = true">
            Request A Consultation
          </button>
        </div>
      </div>

      <!-- Consultation Form -->
      <div v-else class="form-container">
        <div class="form-header">
          <button class="back-button" @click="showForm = false">‚Üê Back</button>
          <h2 class="form-title">Request A Consultation</h2>
        </div>

        <form class="consultation-form" @submit.prevent="submitForm">
          <input type="text" v-model="form.name" placeholder="Your Name" required />
          <input type="email" v-model="form.email" placeholder="Your Email" required />

          <!-- Service Dropdown -->
          <select v-model="form.service" required>
            <option disabled value="">Select a Service</option>
            <option>AI</option>
            <option>IT</option>
            <option>QA</option>
            <option>Policies</option>
          </select>

          <!-- Description -->
          <textarea
            v-model="form.description"
            placeholder="Describe what you need..."
            rows="5"
            required
          ></textarea>

          <!-- Date & Time Picker -->
          <label class="datetime-label">Preferred Date & Time:</label>
          <input
            type="datetime-local"
            v-model="form.datetime"
            :min="minDateTime"
            required
          />

          <!-- Submit Button -->
          <button class="submit-button" type="submit">Submit</button>
        </form>
      </div>
    </main>

    <!-- Footer -->
    <footer class="page-footer">
