<script setup>
import { ref, computed } from 'vue'

const showForm = ref(false)

const form = ref({
  name: '',
  email: '',
  service: '',
  description: '',
  datetime: '',
})

const getCurrentDateTimeLocal = () => {
  const now = new Date()
  now.setMinutes(now.getMinutes() - now.getTimezoneOffset())
  return now.toISOString().slice(0, 16)
}

const minDateTime = computed(() => getCurrentDateTimeLocal())

function submitForm() {
  alert(`Thank you, ${form.value.name}! Your ${form.value.service} consultation request was submitted.`)
  showForm.value = false
  form.value = {
    name: '',
    email: '',
    service: '',
    description: '',
    datetime: '',
  }
}
</script>

